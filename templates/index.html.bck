<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <title></title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding: 40px;
            background-color: #f9f9f9;
   	    height: 50vh; /* Sayfa yüksekliğini kapla */
            display: flex;
            justify-content: center; /* YATAY ortala */
            align-items: center;     /* DİKEY ortala */
            flex-direction: column;
        }

        h2 {
            color: #333;
            margin-bottom: 20px;
        }

        table {
            border-collapse: separate;
            border-spacing: 0;
            width: 500px;
            background-color: #fff;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            border-radius: 8px;
            overflow: hidden;
        }

        th, td {
            padding: 12px 16px;
            text-align: left;
        }

        th {
            background-color: #4CAF50;
            color: white;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        tr:hover {
            background-color: #e0f7fa;
        }

        .ok {
            color: white;
            background-color: #4CAF50;
            padding: 4px 10px;
            border-radius: 12px;
            font-weight: bold;
            display: inline-block;
        }

        .unreachable {
            color: white;
            background-color: #f44336;
            padding: 4px 10px;
            border-radius: 12px;
            font-weight: bold;
            display: inline-block;
        }

        .unknown {
            color: white;
            background-color: #9e9e9e;
            padding: 4px 10px;
            border-radius: 12px;
            font-weight: bold;
            display: inline-block;
        }
    </style>
</head>
<body>
    <h2>Temsilci Durum Takip Sistemi</h2>
    <table>
        <thead>
            <tr>
                <th>Müşteri Temsilcisi</th>
                <th>Durum</th>
            </tr>
        </thead>
        <tbody id="agentTable">
        </tbody>
    </table>

    <script>
    async function getAgents() {
        const response = await fetch('/api/agents');
        const agents = await response.json();
        const tbody = document.getElementById('agentTable');
        tbody.innerHTML = '';

        agents.forEach(agent => {
            const row = document.createElement('tr');

            let statusClass = '';
            if (agent.status === 'ONLINE') {
                statusClass = 'ok';
            } else if (agent.status === 'OFFLINE') {
                statusClass = 'unreachable';
            } else {
                statusClass = 'unknown';
            }

            row.innerHTML = `
                <td>${agent.name}</td>
                <td><span class="${statusClass}">${agent.status}</span></td>
            `;
            tbody.appendChild(row);
        });
    }

    setInterval(getAgents, 3000);
    getAgents();
    </script>
</body>
</html>
